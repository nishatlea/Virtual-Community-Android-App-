<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_question_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="What is your questionString?"/>

    <TextView
       android:visibility="invisible"
        android:id="@+id/text_question_number_of_answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_question_string"
        tools:text="5 answers"/>
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/text_question_string"
        >

        <TextView


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Query From: "/>


        <TextView

            android:id="@+id/ask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            tools:text="ask"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:orientation="horizontal"
        >
        <TextView


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Query For: "/>


        <TextView

            android:id="@+id/reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ask"
            tools:text="reply"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/image_question_user_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_question_string"
        android:layout_alignParentRight="true"
        tools:src="@android:drawable/star_big_on"/>

    <TextView
        android:id="@+id/text_question_time_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_question_user_image"
        android:layout_alignParentRight="true"
        tools:text="Submitted: 1 Jan 2015"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray"/>
</RelativeLayout>